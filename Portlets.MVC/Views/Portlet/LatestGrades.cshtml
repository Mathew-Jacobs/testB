@model Portlets.MVC.Models.AcademicData

@{
    ViewBag.Title = "LatestGrades";
}

@{
    var latestTerm = Model.AcademicTerms.Last();
}

<link rel="stylesheet" type="text/css" href="~/Content/Individual_Views/Latest-Grades.css" />

<div style="width: 335px;">
    <table style="width: 100%;">
        <tbody>
            <tr style="background-color: #e1e3e6; height: 40px; font-weight: bold">
                <td style="padding-left: 8px;">@latestTerm.TermSeason @latestTerm.TermYear</td>
                <td style="text-align: right; padding-right: 8px; color: #6f7276">Term GPA: @Math.Round(latestTerm.GradePointAverage, 2).ToString("0.00")</td>
            </tr>
        </tbody>
    </table>
    <table style="width: 100%">
        <thead class="t-dark-header">
            <tr>
                <th>Course</th>
                <th>Title</th>
                <th>Credit</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in latestTerm.AcademicCredits)
            {
                <tr class="space-around">
                    <td>@course.CourseId</td>
                    <td style="max-width: 145px">@course.Title</td>
                    <td style="text-align: center">@Math.Round(course.CompletedCredit, 2).ToString("0.00")</td>
                    <td style="text-align: center">@course.VerifiedGradeId</td>
                </tr>
            }
        </tbody>
    </table>
</div>