@model Portlets.MVC.Models.StudentFinance

@{
    ViewBag.Title = "AccountSummary";
}

@{ double overdue = 0; }

<div class="portlet-iframe">
    <div class="test">
        <div style="font-size:20px">Student Account</div>
        <div class="text-right" style="font-size:90%; transform: translateY(32%)">
            <a style="text-decoration: underline; color: white; opacity: 0.8" href="https://statement.sinclair.edu/Student/Finance">
                View Details
            </a>
        </div>
    </div>
    <hr style="margin: 7px 0;" />
    @if (Model.Balance != 0)
    {
        foreach (var term in Model.AccountTerms)
        {
            foreach (var item in term.GeneralItems)
            {
                if (item.Overdue)
                {
                    overdue += item.AmountDue;
                }
            }
        }
        if (overdue != 0)
        {
            <div class="test sinclair-red">
                <div class="main-text text-sinclair-red">Overdue</div>
                <div class="main-text text-right text-sinclair-red">@overdue</div>
            </div>
        }
        <div class="test">
            <div class="main-text">Total Due</div>
            <div class="main-text text-right">@Model.Balance</div>
        </div>
    }
    else
    {
        <div class="main-text">
            You have no outstanding balance
        </div>
    }
</div>
